    <select id="selectRecordByUserName" resultType="gof.knowledgemirror.pojos.AnswerScoreEntity">
        SELECT html_score,css_score,ajax_score,js_score,jqury_score,
        data_structure_score,os_score,com_net_score,com_org_score,comprehension_score,analogy_score,number_score,text
        FROM record
        WHERE user_name=#{user_name}
        ORDER BY id LIMIT #{times},1;
    </select>


    <!-- 从数据库中取出用户所做题目的次数 -->
    <select id="selectTimesByUserName" resultType="int">
        SELECT COUNT(*) FROM record
        WHERE user_name=#{arg0}
